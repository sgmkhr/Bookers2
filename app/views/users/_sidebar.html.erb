
  <div class="sidebar col-md-3">
    <section>
      <h2>User info</h2>
      <div>
        <%= image_tag user.get_profile_image(100, 100) %>
      </div>
      
      <table class="table">
        <tr>
          <td>
            <p>name</p>
          </td>
          <td>
            <%= user.name %>
          </td>
        </tr>
        <tr>
          <td>
            <p>introduction</p>
          </td>
          <td>
            <%= user.introduction %>
          </td>
        </tr>
      </table>
      
      <% if user == current_user %>
        <%= link_to edit_user_path(user.id) do %>
          <button type="button" class="btn btn-outline-secondary btn-block"><i class="fa-solid fa-user-gear"></i></button>
        <% end %>
      <% else %>
        <%= link_to user_path(current_user.id) do %>
          <button type="button" class="btn btn-outline-secondary btn-block"><i class="fa-solid fa-user-gear"></i></button>
        <% end %>
      <% end %>
    </section>
    <section>
      <h2>New book</h2>
      <div>
        <%= form_with model: new_book do |f| %>
          <div>
            <p>Title</p>
            <%= f.text_field :title %>
          </div>
          <div>
            <p>Opinion</p>
            <%= f.text_area :body %>
          </div>
          <div>
            <%= f.submit "Create Book" %>
          </div>
        <% end %>
      </div>
    </section>
  </div>