<div class="d-flex justify-content-center">
  <div class="row">
    <div class="col">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <div>
          <p>Name</p>
          <%= f.text_field :name %>
        </div>
        <div>
          <p>Image</p>
          <%= f.file_field :profile_image %>
        </div>
        <div>
          <p>Introduction</p>
          <%= f.text_area :introduction %>
        </div>
        <div>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>