<%= flash[:notice] %>
<div class="row">
  <%= render 'sidebar', user: @user, new_book: @new_book %>
  <section class="books col-md-8 offset-md-1">
    <h2 class= "pb-2">Books</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(100, 100) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
                <span><%= book.title %></span>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
