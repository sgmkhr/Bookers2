<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <script src="https://kit.fontawesome.com/945e2890b0.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column">
    <header class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
      <div class="container">
        <%= link_to root_path do %>
          <div class="navbar-brand p-1">Bookers</div>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to root_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-house"></i>Home
                <% end %>
              </li class="nav-item">
              <li>
                <%= link_to users_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-users"></i>Users
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to books_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-book-open"></i>Books
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, class: "nav-link text-light", method: :delete do %>
                  <i class="fa-solid fa-right-from-bracket"></i>Log out
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to root_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-house"></i>Home
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to home_about_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-link"></i>About
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-user-plus"></i>Sign up
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-right-to-bracket"></i>Log in
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </header>
    <main class="container">
      <%= yield %>
    </main>
    <footer class="container mt-3">
      <div class="row d-flex justify-content-center">
        <div class="col m-auto text-center"><p>CopyRight Infratop.inc</p></div>
      </div>
    </footer>
  </body>
</html>
