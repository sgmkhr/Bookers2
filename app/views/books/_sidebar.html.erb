
  <div class="sidebar">
    <section class="user-info">
      <h2 class="section-title">User info</h2>
      <div class="info-image">
        <%= image_tag user.get_profile_image(100, 100) %>
      </div>
      <div class="info-name">
        <p>name</p><p><%= user.name %></p>
      </div>
      <div class="info-introduction">
        <p>introduction</p><%= user.introduction %><p>
      </div>
      <% if user == current_user %>
        <%= link_to edit_user_path(user.id) do %>
          <span><i class="fa-solid fa-user-gear"></i></span>
        <% end %>
      <% else %>
        <%= link_to user_path(current_user.id) do %>
          <span><i class="fa-solid fa-user-gear"></i></span>
        <% end %>
      <% end %>
    </section>
    <section class="new-book">
      <h2 class="section-title">New book</h2>
      <div class="form-section">
        <%= form_with model: new_book do |f| %>
          <div class="form-item">
            <h4>Title</h4>
            <%= f.text_field :title %>
          </div>
          <div class="form-item">
            <h4>Opinion</h4>
            <%= f.text_area :body %>
          </div>
          <div class="form-item">
            <%= f.submit "Create Book" %>
          </div>
        <% end %>
      </div>
    </section>
  </div>