
  <div class="sidebar col-md-3">
    <section>
      <h2>User info</h2>
      <div>
        <%= image_tag user.get_profile_image(100, 100) %>
      </div>
      
      <table class="table">
        <tr>
          <td>
            <p>name</p>
          </td>
          <td>
            <%= user.name %>
          </td>
        </tr>
        <tr>
          <td>
            <p>introduction</p>
          </td>
          <td>
            <%= user.introduction %>
          </td>
        </tr>
      </table>
      <%= link_to edit_user_path(user) do %>
        <button type="button" class="btn btn-outline-secondary btn-block"><i class="fa-solid fa-user-gear"></i></button>
      <% end %>
    </section>
    <section>
      <h2>New book</h2>
        <%= form_with model: new_book do |f| %>
          <div class="form-group">
            <label>Title</label>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <label>Opinion</label>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <div>
            <%= f.submit "Create Book", class: "btn btn-success" %>
          </div>
        <% end %>
    </section>
  </div>