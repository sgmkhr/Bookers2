<% if @new_book.errors.any? %>
  <%= @new_book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <%= render 'users/sidebar', user: @user, new_book: @new_book %>
  <section class="books col-md-8 offset-md-1">
    <h2 class="border-bottom pb-2">Books</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th><th>Title</th><th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(80, 80) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
                <span><%= book.title %></span>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
