<% if @new_book.errors.any? %>
  <%= @new_book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
<div class="container">
  <%= render 'sidebar', user: @user, new_book: @new_book %>
  <section class="books">
    <h2 class="section-title">Books</h2>
    <div class="head-title">
      <span>Title</span><span>Opinion</span>
    </div>
    <div class="book-list">
      <% @books.each do |book| %>
        <ul>
          <li class="user-image book-list-item">
            <%= image_tag book.user.get_profile_image(70, 70) %>
          </li>
          <li class="book-title book-list-item">
            <%= link_to book_path(book.id) do %>
              <span><%= book.title %></span>
            <% end %>
          </li>
          <li class="book-opinion book-list-item">
            <%= book.body %>
          </li>
        </ul>
      <% end %>
    </div>
  </section>
</div>
